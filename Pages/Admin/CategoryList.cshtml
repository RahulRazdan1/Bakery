@page
@model Bakery.Pages.Admin.CategoryListModel
@{
}
<div style="min-height:520px;background-color:#f2f4f8;border-radius: 10px;">
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box-header with-border">
                    <h4 class="box-title">Course List</h4>
                </div>
                <div class="box">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="bb-1 clearFix">
                                    <div class="text-end pb-15">
                                        <a class="btn btn-success" asp-page="/Courses/Add"> <span><i class="fa fa-print"></i> Add </span> </a>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="content-body">
                            <section id="basic-form-layouts">
                                <table class="table table-striped table-bordered hover" id="gridCourse">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var Category in Model.CategoryList)
                                        {
                                            <tr>
                                                <td>@Category.Name</td>
                                                <td>@Category.Image</td>
                                                <td>@Category.IsActive</td>
                                                <td>
                                                    <a asp-page="/Courses/Edit" asp-route-id="@Category.CategoryId">Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                                    <a asp-page="/Courses/Delete" asp-route-id="@Category.CategoryId">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
@section Scripts{
    <link rel="stylesheet" type="text/css" href="~/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="~/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#gridCourse').DataTable();
        });
    </script>
    }