@page
@model Bakery.Pages.LoginModel
@{
    Layout = "";
}
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/style.css">
<script
  src="https://code.jquery.com/jquery-3.6.1.min.js"
  integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
  crossorigin="anonymous"></script>
 <style type="text/css">
        .btn-primary {
            color: #fff;
            background-color: #9C0646 !important;
            border-color: #9C0646 !important;
        }

        #btn-back-to-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: none;
        }
    </style>
    <form method="post">
        <div id="divLogin">
            <p class="text-center hint-text">Sign in with your account</p>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" asp-for="Model.Email" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="Model.Password" placeholder="Password" required="required">
            </div>
            <input type="submit" class="btn btn-primary btn-block" value="Login" asp-page-handler="Submit"/>
            <input type="hidden" class="form-control" asp-for="RefreshPage" />
            <div class="text-center mt-2">
                <a href="#" onclick="return showForgetPwd();" style="font-weight:normal;">Forgot Your password?</a>
            </div>
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </form>
<form method="post">
    <div>
        <div id="divForgetPwd" style="display:none;">
            <p class="text-center hint-text">Recover your account</p>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="Model.Email" placeholder="Username" required="required">
            </div>
            <input type="submit" class="btn btn-primary btn-block" value="Reset Password" asp-page-handler="ForgetPwd"/>
            <div class="text-center mt-2">
                <a href="#" onclick="return showLoginAccount();" style="font-weight:normal;">Login Account</a>
            </div>
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
</form>
<script>
    function showForgetPwd(){
        document.getElementById('divForgetPwd').style.display = 'block';
        document.getElementById('divLogin').style.display = 'none';
        return false;
    }
    function showLoginAccount(){
        document.getElementById('divLogin').style.display = 'block';
        document.getElementById('divForgetPwd').style.display = 'none';
        return false;
    }
    @if (ModelState.IsValid)
    {
        <text>
        $(document).ready(function() {            
           if(document.getElementById('RefreshPage').value != undefined && document.getElementById('RefreshPage').value != null && document.getElementById('RefreshPage').value != ''){
               if(document.getElementById('RefreshPage').value == 'True' || document.getElementById('RefreshPage').value == 'true'){
                   parent.RefreshPage();
               }
           }
        });
        </text>
    }
</script>